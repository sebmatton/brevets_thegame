	{% for flash in flash_items %}
		<div class="alert alert-{{ flash.type }} alert-dismissable">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
		<strong>
			{% if flash.type == 'success' %}FÃ©licitations !
			{% elseif flash.type == 'primary' %}
	        {% elseif flash.type == 'warning' %} Attention !
	        {% elseif flash.type == 'danger' %} Erreur !
	        {% endif %}
	    </strong> {{ flash.text|raw }} </div>
	{% endfor %}
{% endif %}